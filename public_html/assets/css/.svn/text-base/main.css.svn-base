.pss_slides {
	width:90%;
	position:relative;
	min-height:700px;
	margin:0 auto;
	text-align:left;
	max-width:1440px;
}
.pss_slides ul  li {
    height:100%; width:100%; left:0; top:0;
    position:fixed !important;
    text-align:center;
	background-size:cover;
	background: #015fc9; /* Old browsers */
	background: -moz-linear-gradient(top, #015fc9 0%, #1aaae8 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#015fc9), color-stop(100%,#1aaae8)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #015fc9 0%,#1aaae8 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #015fc9 0%,#1aaae8 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top, #015fc9 0%,#1aaae8 100%); /* IE10+ */
	background: linear-gradient(to bottom, #015fc9 0%,#1aaae8 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#015fc9', endColorstr='#1aaae8',GradientType=0 ); /* IE6-9 */
}